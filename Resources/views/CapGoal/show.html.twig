{% extends 'SFCapBundle::cap.html.twig' %}
{% block content %}
<h1>CapGoal</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Duration</th>
            <td>{{ entity.duration }}</td>
        </tr>
        <tr>
            <th>Distance</th>
            <td>{{ entity.distance }}</td>
        </tr>
        <tr>
            <th>Delay</th>
            <td>{{ entity.delay }}</td>
        </tr>
        <tr>
            <th>Sum</th>
            <td>{{ entity.sum }}</td>
        </tr>
        <tr>
            <th>Comment</th>
            <td>{{ entity.comment }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('goals') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('goal_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('goal_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}