{% extends 'SFCapBundle::cap.html.twig' %}
{% block body %}
    <div class="row-fluid">
      <div class="span12">
        <div class="row-fluid" id="firstLine">
          {% include 'SFCapBundle:Default:firstline.html.twig' with {'runner': runner} %}
